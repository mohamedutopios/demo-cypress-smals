{% extends 'base.html.twig' %}

{% block title %}Produits - Symfony Cypress Demo{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 data-cy="page-title">
        <i class="bi bi-grid me-2"></i>Produits
    </h1>
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_product_new') }}" class="btn btn-primary" data-cy="new-product-btn">
            <i class="bi bi-plus-lg me-1"></i>Nouveau produit
        </a>
    {% endif %}
</div>

<!-- Filtres et recherche -->
<div class="card mb-4" data-cy="filters-card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <form method="get" class="d-flex gap-2" data-cy="search-form">
                    <input 
                        type="text" 
                        name="q" 
                        class="form-control" 
                        placeholder="Rechercher un produit..."
                        value="{{ searchQuery }}"
                        data-cy="search-input"
                    >
                    <button type="submit" class="btn btn-outline-primary" data-cy="search-btn">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-6">
                <div class="d-flex gap-2 flex-wrap" data-cy="category-filters">
                    <a href="{{ path('app_product_index') }}" class="btn btn-sm {{ not currentCategory ? 'btn-primary' : 'btn-outline-primary' }}" data-cy="filter-all">
                        Tous
                    </a>
                    <a href="{{ path('app_product_index', {category: 'electronics'}) }}" class="btn btn-sm {{ currentCategory == 'electronics' ? 'btn-primary' : 'btn-outline-primary' }}" data-cy="filter-electronics">
                        Électronique
                    </a>
                    <a href="{{ path('app_product_index', {category: 'clothing'}) }}" class="btn btn-sm {{ currentCategory == 'clothing' ? 'btn-primary' : 'btn-outline-primary' }}" data-cy="filter-clothing">
                        Vêtements
                    </a>
                    <a href="{{ path('app_product_index', {category: 'food'}) }}" class="btn btn-sm {{ currentCategory == 'food' ? 'btn-primary' : 'btn-outline-primary' }}" data-cy="filter-food">
                        Alimentation
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liste des produits -->
{% if products|length > 0 %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" data-cy="products-list">
        {% for product in products %}
            <div class="col" data-cy="product-item">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title" data-cy="product-name">{{ product.name }}</h5>
                            {% if product.category %}
                                <span class="badge bg-info" data-cy="product-category">{{ product.category }}</span>
                            {% endif %}
                        </div>
                        <p class="card-text text-muted small" data-cy="product-description">
                            {% set desc = product.description|default('Aucune description') %}
                            {{ desc|length > 80 ? desc|slice(0, 80) ~ '...' : desc }}
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="h5 text-primary mb-0" data-cy="product-price">{{ product.price|number_format(2, ',', ' ') }} €</span>
                            <span class="badge {{ product.stock > 0 ? 'bg-success' : 'bg-danger' }}" data-cy="product-stock">
                                Stock: {{ product.stock }}
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary flex-grow-1" data-cy="view-btn">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            {% if is_granted('ROLE_USER') %}
                                <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-outline-secondary" data-cy="edit-btn">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4 text-muted text-center" data-cy="products-count">
        {{ products|length }} produit(s) trouvé(s)
    </div>
{% else %}
    <div class="alert alert-info" data-cy="no-products">
        <i class="bi bi-info-circle me-2"></i>
        {% if searchQuery %}
            Aucun produit trouvé pour "{{ searchQuery }}".
        {% elseif currentCategory %}
            Aucun produit dans cette catégorie.
        {% else %}
            Aucun produit disponible.
        {% endif %}
    </div>
{% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouveau produit - Symfony Cypress Demo{% endblock %}

{% block body %}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Produits</a></li>
        <li class="breadcrumb-item active">Nouveau</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card" data-cy="new-product-card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="bi bi-plus-lg me-2"></i>Nouveau produit</h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'data-cy': 'product-form'}}) }}
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.isActive) }}
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" data-cy="submit-btn">
                            <i class="bi bi-check-lg me-1"></i>Cr√©er le produit
                        </button>
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary" data-cy="cancel-btn">
                            <i class="bi bi-x-lg me-1"></i>Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

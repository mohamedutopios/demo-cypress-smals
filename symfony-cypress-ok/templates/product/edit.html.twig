{% extends 'base.html.twig' %}

{% block title %}Modifier {{ product.name }} - Symfony Cypress Demo{% endblock %}

{% block body %}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Produits</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_product_show', {id: product.id}) }}">{{ product.name }}</a></li>
        <li class="breadcrumb-item active">Modifier</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card" data-cy="edit-product-card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="bi bi-pencil me-2"></i>Modifier le produit</h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'data-cy': 'product-form'}}) }}
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.isActive) }}
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" data-cy="submit-btn">
                                <i class="bi bi-check-lg me-1"></i>Enregistrer
                            </button>
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-secondary" data-cy="cancel-btn">
                                <i class="bi bi-x-lg me-1"></i>Annuler
                            </a>
                        </div>
                        <form method="post" action="{{ path('app_product_delete', {id: product.id}) }}" 
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"
                              style="display: inline;"
                              data-cy="delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="btn btn-outline-danger" data-cy="delete-btn">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </form>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

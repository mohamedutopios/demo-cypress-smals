{% extends 'base.html.twig' %}

{% block title %}Accueil - Symfony Cypress Demo{% endblock %}

{% block body %}
<div class="hero rounded-3 mb-5" data-cy="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3" data-cy="hero-title">Bienvenue sur CypressDemo</h1>
        <p class="lead mb-4" data-cy="hero-subtitle">
            Application de démonstration Symfony pour les tests E2E avec Cypress
        </p>
        <div class="d-flex gap-3 justify-content-center">
            <a href="{{ path('app_product_index') }}" class="btn btn-light btn-lg" data-cy="hero-cta-products">
                <i class="bi bi-grid me-2"></i>Voir les produits
            </a>
            {% if not app.user %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg" data-cy="hero-cta-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                </a>
            {% endif %}
        </div>
    </div>
</div>

<section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 data-cy="latest-products-title">
            <i class="bi bi-star me-2 text-warning"></i>Derniers produits
        </h2>
        <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary" data-cy="view-all-products">
            Voir tout <i class="bi bi-arrow-right ms-1"></i>
        </a>
    </div>

    {% if latestProducts|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" data-cy="products-grid">
            {% for product in latestProducts %}
                <div class="col" data-cy="product-card">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title" data-cy="product-name">{{ product.name }}</h5>
                                {% if product.category %}
                                    <span class="badge bg-secondary" data-cy="product-category">{{ product.category }}</span>
                                {% endif %}
                            </div>
                            <p class="card-text text-muted" data-cy="product-description">
                                {% set desc = product.description|default('Aucune description') %}
                                {{ desc|length > 100 ? desc|slice(0, 100) ~ '...' : desc }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary mb-0" data-cy="product-price">{{ product.price|number_format(2, ',', ' ') }} €</span>
                                <span class="text-muted small" data-cy="product-stock">
                                    <i class="bi bi-box-seam me-1"></i>Stock: {{ product.stock }}
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary w-100" data-cy="product-view-btn">
                                Voir le détail
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info" data-cy="no-products-message">
            <i class="bi bi-info-circle me-2"></i>Aucun produit disponible pour le moment.
        </div>
    {% endif %}
</section>

<section class="row g-4 mb-5" data-cy="features-section">
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 bg-light">
            <div class="card-body">
                <div class="display-4 text-primary mb-3"><i class="bi bi-shield-check"></i></div>
                <h5 class="card-title">Tests E2E</h5>
                <p class="card-text text-muted">Application conçue pour apprendre les tests end-to-end avec Cypress</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 bg-light">
            <div class="card-body">
                <div class="display-4 text-success mb-3"><i class="bi bi-code-slash"></i></div>
                <h5 class="card-title">data-cy Attributes</h5>
                <p class="card-text text-muted">Tous les éléments importants ont des attributs data-cy pour les tests</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100 border-0 bg-light">
            <div class="card-body">
                <div class="display-4 text-info mb-3"><i class="bi bi-database"></i></div>
                <h5 class="card-title">CRUD Complet</h5>
                <p class="card-text text-muted">Gestion complète des produits : création, lecture, modification, suppression</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
